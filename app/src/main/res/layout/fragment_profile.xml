<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nslabs.ns.GalleryFragment">

    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
        android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
        android:title="ns1"
        android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" />
    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/imageView2" />




        <EditText android:id="@+id/Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_below="@+id/imageView2"
            android:text="Change Profile Photo"
            android:layout_marginLeft="80dp"
            android:textSize="15dp"
            android:background="@android:color/transparent"
            android:focusableInTouchMode="false"
            android:clickable="true"/>


    <EditText android:id="@+id/Edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Edit"
        android:text="Change your password"
        android:layout_marginLeft="80dp"
        android:textSize="15dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="false"
        android:clickable="true"/>

    <EditText android:id="@+id/Edit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Edit1"
        android:text="Update child details"
        android:layout_marginLeft="80dp"
        android:textSize="15dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="false"
        android:clickable="true"/>

    <EditText android:id="@+id/Edit3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Edit2"
        android:text="English"
        android:layout_marginLeft="80dp"
        android:textSize="15dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="false"
        android:clickable="true"/>

    <EditText android:id="@+id/Edit4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/Edit3"
        android:text="Logout"
        android:layout_marginLeft="80dp"
        android:textSize="15dp"
        android:background="@android:color/transparent"
        android:focusableInTouchMode="false"
        android:clickable="true"/>




</RelativeLayout>

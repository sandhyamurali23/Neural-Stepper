<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
        android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
        android:title="ns1"
        android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" />


    <FrameLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:background="#2196F3"
        android:id="@+id/frameLayout">

    </FrameLayout>

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:hint="FirstName"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/etUsername"
        android:layout_alignStart="@+id/etUsername" />



    <EditText

        android:id="@+id/etLastName"
        android:layout_width="170dp"
        android:hint="LastName"
        android:layout_marginLeft="33dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/etFirstName"
        android:layout_alignEnd="@+id/etUsername" />


    <EditText
        android:layout_below="@+id/frameLayout"
        android:id="@+id/etUsername"
        android:layout_width="218dp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="10dp"
        android:layout_height="45dp"
        android:hint="EmailAddress"
        android:layout_marginLeft="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />


    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="45dp"
        android:hint="Password"
        android:layout_below="@+id/etFirstName"
        android:layout_alignStart="@+id/etRPassword"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/etLastName" />


    <EditText
        android:id="@+id/etRPassword"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="45dp"
        android:hint="RepeatPassword"
        android:layout_below="@+id/etPassword"
        android:layout_alignStart="@+id/etFirstName"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/bRegister" />


    <Button
        android:id="@+id/bRegister"
        android:text="NEXT"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="@drawable/blue_button"
        android:focusable="false"
        android:layout_below="@+id/etRPassword"
        android:layout_alignEnd="@+id/etLastName"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/tvSignIn"
        android:layout_width="120dp"
        android:text="Back to sign in"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:textSize="15dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_alignStart="@+id/etRPassword"
        android:layout_alignTop="@+id/bRegister" />

    <TextView
        android:layout_width="89dp"
        android:text="   Sign up"
        android:textSize="19dp"
        android:layout_marginTop="170dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_gravity="left|center_vertical" />


</RelativeLayout>